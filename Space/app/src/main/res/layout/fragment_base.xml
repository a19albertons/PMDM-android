<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/background_dark"
    tools:context=".Base">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/saturno"
        android:contentDescription="Planeta decorativo"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explora el Sistema Solar"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descubre datos curiosos y maravillas de nuestros planetas."
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"/>

    <Button
        android:id="@+id/btn_explorar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¡Comenzar viaje!"
        android:textAllCaps="false"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:elevation="4dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>

</LinearLayout>
